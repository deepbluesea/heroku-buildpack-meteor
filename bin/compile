#!/bin/sh

BUILD_DIR=$1
CACHE_DIR=$2
METEOR_HOME=~/.meteor:$METEOR_HOME

build() {
  (
    echo "Building meteor bundle"
    cd $BUILD_DIR
     git clone https://github.com/deepbluesea/meteor
     meteor build $BUILD_DIR/meteor
     ls
    
  )
}

[ ! -d $BUILD_DIR ] && mkdir $BUILD_DIR
[ ! -d $CACHE_DIR ] && mkdir $CACHE_DIR

build
