#!/bin/sh

install_meteor() {
cd /
mkdir ~/.node/ && cd ~/.node/
ls
pwd
curl http://nodejs.org/dist/v0.10.13/node-v0.10.13-linux-x64.tar.gz | tar -C ~/.node/  -zx
pwd
ls
mv node-v0.10.13-linux-x64 0.10.13
ln -s 0.10.13 current
export PATH="~/.nodes/current/bin:$PATH"

# check
node --version
npm --version
}
install_meteor
