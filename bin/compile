#!/bin/sh

BUILD_DIR=/usr/local/:$BUILD_DIR
CACHE_DIR=$2
METEOR_HOME=$BUILD_DIR/.meteor/checkout:$METEOR_HOME
echo $BUILD_DIR
install_meteor() {
cd /usr/local/bin
curl http://nodejs.org/dist/v0.10.13/node-v0.10.13-linux-x64.tar.gz | tar -C $BUILD_DIR --strip-components=1 -zxv

mkdir -p ~/meteor && cd ~/meteor
ls
git clone git://github.com/meteor/meteor.git
ls
cd 
meteor
ls
zip -r meteor.zip .
}

install_meteor

echo "Checking for post_compile script"
if [ -f $BUILD_DIR/bin/post_compile ] ; then
    echo "-----> Running post_compile hook"
    chmod +x $BUILD_DIR/bin/post_compile
    $BUILD_DIR/bin/post_compile
fi
